<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="8dp"
    >

    <androidx.cardview.widget.CardView
        style="@style/CardViewRecyclerViewStyle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardView"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"


            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewItem1"
                android:layout_marginTop="20dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:elevation="18dp"
                app:cardCornerRadius="250dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintEnd_toStartOf="@id/fishName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fishIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:contentDescription="fishPicture"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/fishName"
                style="@style/CaptionSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fishName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cardViewItem1"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/fishPrice"
                style="@style/GeneralMarginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fishPrice"

                app:layout_constraintLeft_toRightOf="@id/cardViewItem1"
                app:layout_constraintTop_toBottomOf="@id/fishName">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
